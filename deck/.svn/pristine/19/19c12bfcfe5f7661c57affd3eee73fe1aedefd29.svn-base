.plan{
	width: 80%;
	height: 10px;
	background: #e2e2e2;
	margin-top: 20px;
	border-radius: 10px;
	position: relative;
	box-shadow: 1px 2px 2px #b3b3b3 inset;
}
.tiao{
	width: 0%;
	height: 10px;
	background: #ffc600;
	border-radius: 10px;
	float: left;
	box-shadow: 1px 2px 2px #b3b3b3 inset;
}
.round{
	width: 30px;
	height: 30px;
	background: #e2e2e2;
	position: absolute;
	display: inline-block;
	top: -10px;
	border-radius: 50%;
	box-shadow: 1px 1px 2px #777 inset;
}
.one{
	left: 15%;
	margin-left: -15px;
}
.two{
	left: 50%;
	margin-left: -15px;
}
.three{
	left: 85%;
	margin-left: -15px;
}
.one:before{
	content: "1";
	display: block;
	width: 80%;
	height: 80%;
	position: absolute;
	top: 10%;
	left: 10%;
	background: #909090;
	box-shadow: 1px 1px 2px #777;
	border-radius: 50%;
	color: #fff;
	text-align: center;
	line-height: 24px;
	font-weight: bold;
}
.two:before{
	content: "2";
	display: block;
	width: 80%;
	height: 80%;
	position: absolute;
	top: 10%;
	left: 10%;
	background: #909090;
	box-shadow: 1px 1px 2px #777;
	border-radius: 50%;
	color: #fff;
	text-align: center;
	line-height: 24px;
	font-weight: bold;
}
.three:before{
	content: "3";
	display: block;
	width: 80%;
	height: 80%;
	position: absolute;
	top: 10%;
	left: 10%;
	background: #909090;
	box-shadow: 1px 1px 2px #777;
	border-radius: 50%;
	color: #fff;
	text-align: center;
	line-height: 24px;
	font-weight: bold;
}
.round.on{
	background: #ffc600;
	box-shadow: 0 0 2px #cb8003 inset;
}
.round.on:before{
	background: #ffc600;
	box-shadow: 0 1px 2px #cb8003;
}
.register{
	width: 280px;
	height: 230px;
	margin-top: 30px;
	position: relative;
	overflow: hidden;
	background: #fff;
}
.box{
	width: 850px;
	height: 220px;
	position: absolute;
	top: 5px;
	left: 5px;
}
.content{
	width: 236px;
	height: 165px;
	padding: 2%;
	float: left;
	box-shadow: 0 0 5px #999;
	margin-right: 10px;
	border-radius: 6px;
}
.title{
	color: #727272;
	font-size: 14px;
	text-align: center;
}
.content > input{
	width: 85%;
	height: 34px;
	border: 1px solid #47a4dc;
	box-shadow: 0 0 3px #ccc;
	margin-top: 20px;
	padding-left: 15%;
}
.content > p > input{
	width: 85%;
	height: 34px;
	border: 1px solid #47a4dc;
	box-shadow: 0 0 3px #ccc;
	padding-left: 15%;
}
.toLogin{
	text-align: center;
	color: #727272;
	margin-top: 10px;
	font-size: .8em;
}
.toLogin > a{
	color: #47a4dc;
	text-decoration: underline;
}
.next{
	width: 100%;
	height: 34px;
	color: #fff;
	background: #47a4dc;
	display: block;
	text-align: center;
	line-height: 34px;
	margin-top: 20px;
	font-size: 1em !important;
	border-radius: 3px;
}
.phone{
	background: url(../../img/newimg/phone.png) no-repeat 10px center;
	background-size: 12px;
}
.pass{
	background: url(../../img/newimg/lock.png) no-repeat 10px center;
	background-size: 12px;
}
.code{
	background: url(../../img/newimg/code.png) no-repeat 10px center;
	background-size: 12px;
}
.verify{
	position: relative;
	margin-top: 20px;
}
.codeBtn{
	position: absolute;
	width: 100px;
	height: 24px;
	font-size: .8em;
	color: #fff;
	text-align: center;
	line-height: 24px;
	right: 5px;
	top: 6px;
	background: #47a4dc;
	border: none;
	border-radius: 5px;
}

.small{
	animation: small .4s forwards;
}
.big{
	animation: big .4s forwards;
}
@keyframes small{
	form{transform: scale(1,1);}
	to{transform: scale(0.8,0.8);}
}
@keyframes big{
	form{transform: scale(.8,.8);}
	to{transform: scale(1,1);}
}