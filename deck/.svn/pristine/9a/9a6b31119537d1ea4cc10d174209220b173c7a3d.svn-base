.login{
	width: 78%;
	box-shadow: 0 0 5px #999;
	margin-top: 30px;
	border-radius: 6px;
	padding: 10px;
	background: #fff;
}
.login > input{
	width: 85%;
	height: 34px;
	border: none;
	border-bottom: 1px solid #ccc;
	padding-left: 15%;
}
.login > p > input{
	width: 85%;
	height: 34px;
	border: none;
	border-bottom: 1px solid #ccc;
	padding-left: 15%;
}
.userName{
	background: url(../../img/newimg/user.png) no-repeat 10px center;
	background-size: 16px;
	margin-bottom: 15px;
}
.userPass{
	background: url(../../img/newimg/pass.png) no-repeat 10px center;
	background-size: 16px;
	margin-bottom: 20px;
}
.toLogin{
	width: 100%;
	height: 34px;
	text-align: center;
	line-height: 34px;
	border: none;
	background: #47a4dc;
	color: #fff;
	margin-bottom: 10px;
	font-size: 1em !important;
	border-radius: 3px;
}
.login > a{
	width: 50%;
	height: 30px;
	line-height: 30px;
	display: inline-block;
	font-size: .8em;
}
.toForget{
	text-align: left;
	color: #727272;
}
.toRegister{
	text-align: right;
	color: #47a4dc;
}
.terms{
	width: 83%;
	margin-top: 20px;
	color: #727272;
	font-size: .8em;
}
.terms > a{
	color: #47a4dc;
}
