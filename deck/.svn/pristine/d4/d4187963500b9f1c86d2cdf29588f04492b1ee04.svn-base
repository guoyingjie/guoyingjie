@charset "utf-8";
/* CSS Document */
/*--------------公有样式-----------------*/
body{
	background:#f0f0f0;
}
.box{
	width:100%; height:auto; position:relative;
}
/*--------------公有头部样式-----------------*/
.header{
	width:100%; height:9.2%; background:#fff; top:0; position:absolute; text-align:center; border-bottom:1px #999999 solid;
}
.header p{
	width:100%; height:18px; text-align:center; margin-top:3.5%; font-family:"微软雅黑"; position:relative;
}
.header span{
	display:block; float:left;
}
.header .pic{
	margin-left:5.3%;
}
.header .dl{
	font-size:18px; text-align:center; width:68.8%;
}
.header .zc{
	font-size:13px; color:#666; margin-top:1.8%;
}
/*---------------------缴费续费----------------------------*/
.xz{
	width:100%;
	height:150px;
	background:#fff;
	border-top:1px solid #b3b3b3;
	border-bottom:1px solid #b3b3b3;
	position:absolute;
	top:16%;
}
.xz .lx,
.xz .sc,
.xz .ze{
	width:93.75%;
	height: 49px !important;
	border-bottom: 1px solid #ddd;
	line-height: 50px;
}
.xz .lx span,
.xz .sc span{
	display:inline-block;
	float:left;
	font-size:15px;
	color:#808080;
	text-align:center;
}
.ze{
	border-bottom: none !important;
}
.nm{
	float: right;
}
.xz .lx span.nr{
	float: right;
	width: auto !important;
	background: url(../img/right.png) no-repeat right !important;
	color: #666 !important;
	padding-right: 30px;
}
.right{
	font-style: normal;
	color: skyblue;
	font-size: 20px;
	font-weight: bold;
	float: right;
	margin-top: 2px;
}
.xz .sc input{
	width:60px;
	height:32px;
	text-align:center;
	border:none;
	color:#cfa72d;
	font-size:14px;
	background:none;
	border-bottom:1px solid #cfa72d;
	float: right;
	margin-top: 8px;
}
.ze{
	font-size:14px;
	color:#666666;
}
.ze .nm{
	color:#cfa72d;
}
.fs{
	font-size:13px; color:#999999; top:50%; left:4.3%; position:absolute;
}
.zffs{
	width:100%; height:100; background:#fff; position:absolute; top:55%;
	border-bottom: 1px solid #b3b3b3;
	border-top: 1px solid #b3b3b3;
}
.zffs li{
	width:100%; height:50px; border-bottom:1px solid #ccc; font-size:13px; color:#666666; position:relative;
}
.zffs li.nb{
	border-bottom:1px solid #f0f0f0;
}
.zffs li i{
	font-style:normal;
}
.zffs li img,.zffs li i,.zffs li span{
	display:block; float:left; position:absolute;
}
.zffs li img.i1{
	top:34%; left:7%;
}
.zffs li img.i2{
	top:37.2%; left:7%;
}
.zffs li img.i3{
	top:37.3%; left:7%;
}
.zffs li i{
	top:25.5%; left:26.4%; font-size: 14px;
}
.zffs li .intext{
	font-size: 10px;
	position: absolute;
	top: 58%;
	left: 26.3%;
	color: #999;
}
.zffs li span{
	width:20px; height:20px; border-radius:50%; border:1px solid #f8f8f8; left:84.37%; top:28.72%;
}
.zffs li span.on{
	background:#4bcdd9 url(../img/dh-3.png) no-repeat center; border:none;
}
.jfdlk{
	width:93.75%; height:8.6%; background:#e8a005; display:block; position:absolute; top:88%; left:3.1%;
}
.btn{
	width:100%; height:100%; background:none; border:none; display:block; font-size:17px; font-family:"微软雅黑"; color:#fafafa; letter-spacing:3px;
}
#cr{
	width:100%; font-size:12px; color:#999999; top:98%; text-align:center; position:absolute;
}
.mask{
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.4);
	position: fixed;
	top: 0;
	left: 0;
	display: none;
}
.popup{
	width: 100%;
	height: 50%;
	background: #f5f5f5;
	position: absolute;
	bottom: -50%;
	text-align: center;
	line-height: 50px;
	font-size: 16px;
	color: #4c4c4c;
}
.close{
	width: 20px;
	height: 20px;
	background: url(../img/close.png) no-repeat center;
	background-size: 13px;
	position: absolute;
	top: 15px;
	left: 15px;
}
.chargeList{
	height: 80%;
	width: 100%;
	overflow: auto;
	border-top: 1px solid #ddd;
	background: #f9f9f9;
}
.chargeList > li{
	width: 85%;
	margin: 0 auto;
	border-bottom: 1px solid #e5e5e5;
	height: 50px;
	font-size: 15px;
	line-height: 50px;
	color: #4c4c4c;
	text-align: left;
}
.chargeList > li > span{
	width: 20px;
	height: 20px;
	border-radius: 50%;
	background: #4bcdd9 url(../img/dh-2.png) no-repeat center;
	background-size: 15px;
	display: none;
	float: right;
	margin-top: 15px;
}
.chargeList > li.on > span{
	display: inline-block;
}
@media screen and (max-width: 480px){
body{max-width:480px;}
}
@media screen and (max-width: 640px){
body{max-width:640px;}
}
@media screen and (min-width: 640px){
body{min-width:640px;}
.box{width:640px; height:auto; position:relative;}
#we{font-size:34px;}
#mf input{font-size:34px;}
#fx{font-size:24px; opacity:0.5; filter:alpha(opacity=50);}
#btn input{font-size:34px;}
}