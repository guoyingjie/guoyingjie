html,body {
    height: 100%;
}

.typeTitle {
    font-size: 16px;
    line-height: 21px;
    background: url(../img/ziimg/type.png)  no-repeat;
    background-size: 21px;
    padding-left: 30px;
    margin: 13px 0;
}

.radio-row {
    line-height: 30px;
    display: inline-block;
    padding: 0 18px;
    position: relative;
}

input[type='radio'].radio {
    opacity: 0;
    position: absolute;
    top: 7px;
   	right:24px;
   	width:20px
   
}

label.radio {
    display: block;
    background: url('../img/ziimg/radio.png') 70px 7px no-repeat;
    background-size: 16px;
    padding-right: 30px;
    /*margin-bottom: 0; */
}

input[type='radio'].radio:checked + .radio {
    background: url('../img/ziimg/onRadio.png') 70px 7px no-repeat;
    background-size: 17px;
}

.border {
    width: 100%;
    height: 1px;
    background-color: #eeeeee;
}


.costType{
    float: right;
    position: relative;
    margin-right: 10px;
}

.costType > ul{
    width: 140px;
    position: absolute;
    top: 24px;

    background: #fff;
    border: 1px solid #b3e6ff;
    font-size: 12px;
    display: none;
    z-index: 99999;
}

.costType > ul > li{
    text-align: center;
    line-height: 30px;
    border-bottom: 1px solid #eeeeee;
}
.costType > ul > li:hover{
    background: #57c6d4;
    color: #fff;
}

.seleType{

    border-radius: 4px;
    width: 140px;
    height: 30px;
    background-color: #e6f8ff;
    display: block;
    text-align: center;
    line-height: 30px;
    font-size: 12px;
}

.down {
    float: right;
    border-radius: 2px;
    display: inline-block;
    height: 100%;
    width: 24px;
    background-color: #b3e6ff;
    

}

.icon-bg {
    display: inline-block;
    width: 100%;
    height: 100%;
    background: url(../img/ziimg/down.png) center no-repeat;
    background-size: 12px;
}

.left-title {
    float: left;
    line-height: 24px
}

.right-number {
    float: right;
    margin-right: 10px;
}

.right-number input {
    color: #47a4dc;
    width: 90px;
    height: 29px;
    border: 1px solid #5d5d5d;
    float: left;
    margin: 0 5px;
    text-align: center;
}

.right-number a {
    width: 30px;
    height: 29px;
    border: 1px solid #5d5d5d;
    color: #5d5d5d;
    text-align: center;
    line-height: 22px;
    display: inline-block;
    font-size: 1.8em;
    text-indent: 0;
    float: left;
}

.tranTip {
    background: url(../img/ziimg/lamp.png) 0 10px no-repeat;
    background-size: 16px;
    padding: 10px 0 10px 20px;
    font-size: 10px;
    line-height: 16px;
    color: #999;
}

.footer-btn {
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 35px;
    font-size: 12px;
    padding:  0 25px;
    z-index: 300;
}