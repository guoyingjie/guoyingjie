html,
body{
	height: 100%;
	font-family: Microsoft Yahei, Arial;
	color: #333;
}
*{
	margin: 0 auto;
	padding: 0;
}
a{
	text-decoration: none;
	cursor: pointer;
}
ul,li{
	list-style: none;
}
button,
input{
	-webkit-appearance: none;
	border-radius: 0;
	font-family: Microsoft Yahei, Arial;
	font-size: .9em;
	color: #333;
}
footer{
	width: 100%;
	position: fixed;
	height: 24px;
	background: #ddd;
	text-align: center;
	line-height: 24px;
	font-size: .8em;
	bottom: 0; 
}

.altMask{
	width: 100%;
	height: 100%;
	background: rgba(119,119,119,.7);
	left: 0;
	top: 0;
	position: fixed;
	display: none;
}
.altMask p{
	font-size:14px;
	color:#333;
	padding:0 5px;
}
.altMask > div{
	width: 160px;
	height: 160px;
	background: rgba(255,255,255,.85);
	position: absolute;
	top: -160px;
	border-radius: 6px;                                    
	left: 50%;
	margin-left: -80px;
	text-align: center;
}
.altMask > div > span{
	width: 45%;
	height: 45%;
	display: inline-block;
	border-radius: 50%;
	margin-top: 15px;
	margin-bottom: 20px;
}
.true > span{
	background: #47a4dc url(../img/t.png) no-repeat center;
	background-size: 50%;
}
.false > span{
	background: #333 url(../img/f.png) no-repeat center;
	background-size: 50%;
}
.msg{
	color: 333333;
}

@media screen and (min-width: 640px){
	body{
		width: 640px;
		height: 900px;
		margin: 0 auto;
	}
	
}