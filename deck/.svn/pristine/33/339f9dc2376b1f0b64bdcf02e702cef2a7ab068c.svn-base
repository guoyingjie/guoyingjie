form{
	width: 80%;
	padding-top: 20px;
}
.hint{
	width: 50%;
	margin-bottom: 20px;
	background: url(../img/zh-l.png) no-repeat left;
	background-size: 18px;
	text-indent: 24px;
	font-size: 18px;
	text-align: center;
}
.phone{
	width: 95%;
	height: 34px;
	border-radius: 6px;
	background: none;
	border: 1px solid #ccc;
	padding-left: 5%;
}
.pass{
	width: 95%;
	height: 34px;
	border-radius: 6px;
	background: none;
	border: 1px solid #ccc;
	padding-left: 5%;
	margin-top: 20px;
}
.code{
	margin: 20px 0;
}
.codeNum{
	width: 55%;
	height: 34px;
	border-radius: 6px;
	border: 1px solid #ccc;
	padding-left: 5px;
}
.codeBtn{
	width: 35%;
	height: 34px;
	background: #1a9bd2;
	color: #fff;
	border: none;
	border-radius: 6px;
	float: right;
}
.subBtn{
	width: 100%;
	height: 34px;
	background: #1a9bd2;
	color: #fff;
	border: none;
	border-radius: 6px;
}